<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="GESTION DE NOTAS"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:layout_marginTop="80dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.383"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <Button
            android:id="@+id/btnNiveles"
            android:layout_width="match_parent"
            android:layout_height="75sp"
            android:onClick="mostrar_niveles_niveles"
            android:text="NIVELES"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnMaterias"
            android:layout_width="match_parent"
            android:layout_height="75sp"
            android:onClick="mostrar_materias_materias"
            android:text="MATERIAS"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnAlumnos"
            android:layout_width="match_parent"
            android:layout_height="75sp"
            android:text="ALUMNOS"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnNotas"
            android:layout_width="match_parent"
            android:layout_height="75sp"
            android:text="NOTAS"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnReportes"
            android:layout_width="match_parent"
            android:layout_height="75sp"
            android:text="REPORTES"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>